<!-- Dos variables locales: user (usuario a comentar) y feedback -->
<%= form_for feedback do |f| %>
  <%= f.label :rating %>: 
  <%= f.select :rating, (1..5), include_blank: true, class: 'form-control' %>
  <br>
  <%= f.label :comment %>
  <br>
  <%= f.text_area :comment, placeholder: "Escribí un comentario acá ...", required: 'true', rows: 6, class: 'form-control' %>
  <%= f.hidden_field :user_id, value: user.id %>
  <%= f.hidden_field :author_id, value: current_user.id %>
  <br>
  <%= submit_tag "Enviar", class:"btn btn-success" %>
<% end %>

