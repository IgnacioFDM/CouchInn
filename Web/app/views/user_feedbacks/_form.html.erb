<!-- Dos variables locales: user (usuario a comentar) y feedback -->
<%= form_for feedback do |f| %>
  <%= f.label :rating %>
  <%= f.number_field :rating, min:1 , max:5, class: 'form-control' %>
  <%= f.label :comment %>
  <%= f.text_field :comment, placeholder: "Escribí un comentario acá ...", required: 'true', class: 'form-control' %>
  <%= f.hidden_field :user_id, value: user.id %>
  <%= f.hidden_field :author_id, value: current_user.id %>
  <%= submit_tag "Enviar", class:"btn btn-success" %>
<% end %>

