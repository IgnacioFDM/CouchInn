<%= form_for feedback do |f| %>
  <label> Puntaje: </label>
  <%= f.select :score, (1..5), include_blank: true, class: 'form-control' %>
  <br>
  <label> Comentario: </label>
  <br>
  <%= f.text_area :comment, placeholder: "Escriba un comentario...", required: 'true', rows: 6, class: 'form-control' %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :couch_post_id, value: couch_post.id %>
  <br>
  <%= submit_tag "Enviar", class:"btn btn-success" %>
<% end %>

