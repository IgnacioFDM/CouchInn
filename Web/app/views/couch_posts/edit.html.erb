<div class="authform">
	<h3>Modificar Couch</h3>

	<%= form_for @couch_post, :html => { :multipart => true }  do |c| %>
	<div class="form-group">
		<%= c.label :title %>
		<%= c.text_field :title, required: :true , class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= c.label :description %>
		<%= c.text_area :description, required: :true,class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= c.label :couch_type_id %>
		<%= c.collection_select(:couch_type_id, CouchType.all.where(disabled: false), :id, :name_for_select, {:required => true , class: "form-control"}) %>
	</div>



	<div class="form-group">
		<%= c.label :zone %>
		<%= c.text_field :zone, required: :true, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= c.label :rooms %>
		<%= c.number_field :rooms, required: :true, min: 1, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= c.label :vacants %>
		<%= c.number_field :vacants, required: :true, min: 1, class: 'form-control' %>
	</div>

	<div class="form-group" >
	
		<%= c.hidden_field :user_id %>
	</div>

		<div class="form-group" >
	
		<%= c.hidden_field :id %>
	</div>

	<%= c.submit 'Modificar Couch', :class => 'button left' %>
	 <%= link_to("Volver", my_couch_posts_path, :class => 'btn btn-danger pull-right') %>
	<% end %>
</div>
