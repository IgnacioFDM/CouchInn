<div class="container">
    <div class="row">

    <%= render 'couch_types/couch_types_side' %>

    <div class="col-md-9">
        <div class="row">
            <div class="col-lg-12">
                <h1 >Couches disponibles
                    <small><%= @filter_text %></small>
                </h1>
            </div>
        </div>

        <% @couch_posts.each do |couch_post| %>
            <%= render couch_post %>
        <% end %>

        <div class="row text-center">
          <div class="col-lg-12">
            <ul class="pagination">
              <%= will_paginate @couch_posts, renderer: BootstrapLinkRenderer, container: false, previous_label: '&laquo;', next_label: '&raquo;' %>
            </ul>
          </div>
        </div>

        <div class="row text-center">
          <%= link_to("Publicar Couch", new_couch_post_path , :class => 'btn btn-success btn-lg pull-right post-couch')%>
        </div>
        <hr>

    </div>
    </div>
</div>
